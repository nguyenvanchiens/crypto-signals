# Server Config
PORT=3001

# ===================== BINANCE API =====================
# Lấy API Key tại: https://www.binance.com/en/my/settings/api-management
# QUAN TRONG: Bat "Enable Futures" khi tao API key
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Testnet (de test truoc khi dung tien that)
# Lay testnet key tai: https://testnet.binancefuture.com/
USE_TESTNET=false
TESTNET_API_KEY=your_testnet_api_key
TESTNET_SECRET_KEY=your_testnet_secret_key

# ===================== BOT CONFIG =====================
# Bat/tat bot tu dong
BOT_ENABLED=false

# Khung thoi gian phan tich (1m, 5m, 15m, 1h, 4h, 1d)
BOT_INTERVAL=1h

# Thoi gian quet (giay)
BOT_SCAN_INTERVAL=60

# So USDT moi lenh
BOT_MARGIN_PER_TRADE=10

# So lenh toi da cung luc
BOT_MAX_POSITIONS=3

# Volume toi thieu (USDT) de xet symbol
BOT_MIN_VOLUME=10000000

# Diem toi thieu de vao lenh
BOT_MIN_SCORE=4

# Test mode (true = khong dat lenh that, chi theo doi)
BOT_TEST_MODE=true

# ===================== SIGNAL CONFIG =====================
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65
MIN_CONFLUENCE=3
ADX_THRESHOLD=20
